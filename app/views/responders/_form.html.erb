<%= form_for @responder do |f| %>
  <%= f.text_field :fname, placeholder: "First Name", required: true %> <br />
  <%= f.text_field :lname, placeholder: "Last Name", required: true %> <br />
  <%= f.text_field :phone, placeholder: "Phone Number", required: true %> <br />
  <%= f.text_field :email, placeholder: "Email", required: true %> <br />
  <%= f.text_field :barNum, placeholder: "Optional State Bar Number", required: false %> <br />
  <%= f.text_field :state, placeholder: "Which state are you in?", required: true %> <br />
  <%= f.text_field :zip, placeholder: "What's your zipcode?", required: true %> <br />
<% end %>
